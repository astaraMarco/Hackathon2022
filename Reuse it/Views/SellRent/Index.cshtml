@{
    ViewData["Title"] = "Sell";
}
<script type="text/javascript">
    function controllaInvio(){
    var val = document.getElementById("cprezzo");
    if (isNaN(val)) {
        alert('Il prezzo deve essere un numero');
    }
    }
</script>
<style>
    #container{
        display: grid;
    }
    .c_testo{
      border-radius: 4px;
      text-align: center;
      padding: 0.5em 1em;
      margin: 5px;
    }

    #btn {
      border-radius: 4px;
      background-color: deepskyblue;
      border: none;
      color: black;
      text-align: center;
      font-size: 1.5em;
      padding: 0.5em 1em;
      transition: all 0.5s;
      cursor: pointer;
      margin: 5px;
    }
</style>

<div id="container">
    <h1>@ViewData["Title"]</h1>
    <p>Inserisci gli articoli da vendere</p>
    <p>Nome: <input style="margin-left:65px;" type="text" class="c_testo"></p>
    <p>Descrizione: <input style="margin-left:27px;" type="text" class="c_testo"></p>
        <p>Grandezza:
        <input style="margin-left:32px;" type="text" class="c_testo">
            <select name="grandezza" id="grandezza">
                <option value="m">m</option>
                <option value="cm">cm</option>
                <option value="mm">mm</option>
            </select>
        </p>
        <p>Dettagli usura:
        <select style="margin-left:5px;" name="condizioni" id="condizioni">
                <option value="1">1- Come nuovo</option>
                <option value="2">2- Ottimo</option>
                <option value="3">3- Buono</option>
                <option value="4">4- Discreto</option>
                <option value="5">5- Pessimo</option>
            </select>
        </p>
    <input type="file" style="margin-left:110px;" value="foto">
    <p>Prezzo: <input style="margin-left:55px;"id="cprezzo" class="c_testo" type="text">€</p>
        <input id="btn" type="button" value="Metti in vendita" onclick="controllaInvio()">
</div>