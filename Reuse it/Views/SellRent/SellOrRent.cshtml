@using Reuse_it.Enumerations
@using Reuse_it.Models.viewModels

@{
    ViewData["Title"] = "SellRent";
}
@model ProductViewModel

<style>
    #p_usura > select {
        width: 100px;
        display: inline
    }

    input {
        border-radius: 4px;
        text-align: center;
        margin-bottom: 5px;
    }

    #Submit {
        border-radius: 4px;
        background-color: deepskyblue;
        border: none;
        color: black;
        text-align: center;
        font-size: 1.5em;
        padding: 0.5em 1em;
        cursor: pointer;
        margin: 5px;
    }
    #p_titolo{
        font-size:23px
    }
    #p_descrizione > input{
        width:25%;
        height:100px;
        text-align:left
    }
</style>

<div class="container">
<h1>SellRent</h1>
<p id="p_titolo">Inserisci gli articoli che vuoi sia vendere che mettere in noleggio</p>
@using (Html.BeginForm("SellRentCheck", "SellRent", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <p>
            Nome: @Html.EditorFor(m => m.nome)
        </p>

        <p id="p_usura">
            Usura:
            <select asp-for="usura" asp-items="Html.GetEnumSelectList<Usury>()" class="form-control"></select>
            <span asp-validation-for="usura" class="text-danger"></span>
        </p>

        @Html.EditorFor(m => m.size)


        <p id="p_descrizione">
            Descrizione: @Html.EditorFor(m => m.descrizione)
        </p>

        <p>
            Inserisci foto: @Html.EditorFor(m => m.foto)
        </p>

        <p>
            Prezzo di vendita: @Html.EditorFor(m => m.priceBuy)
        </p>

        <p>
            Prezzo di noleggio (all'ora)': @Html.EditorFor(m => m.priceRent)
        </p>

        <input id="Submit" type="submit" value="Pubblica prodotto" />


    </div>
}
</div>